{% block table %}

    <tbody>
    {% for item in entities %}
        <tr>
            <td class="{{ classes.td }}">{{ component('ValueInteger', {value: item.id}) }}</td>
            <td class="{{ classes.td }}">{{ item.name }}</td>
            <td class="{{ classes.td }}">{{ component('ValueInteger', {value: item.carsNumber}) }}</td>
            <td class="{{ classes.td }}">{{ item.slug }}</td>
            {{ component('TableDate', {entity: item}) }}
            {{ component('TableAction', {id: item.id, link: 'admin.setting.brand.update'}) }}
        </tr>
    {% else %}
        {{ component('TableEmpty', {value: 7}) }}
    {% endfor %}
    </tbody>
    <thead>
        {{ _self.legend() }}
    </thead>
    <tfoot>
        {{ _self.legend() }}
    </tfoot>
{% endblock %}

{% macro legend() %}
<tr>
    <th>{{ 'text.id'|trans }}</th>
    <th>{{ 'text.name'|trans }}</th>
    <th>{{ 'text.number'|trans }}</th>
    <th>{{ 'text.slug'|trans }}</th>
    <th>{{ 'text.date.created.at'|trans }}</th>
    <th>{{ 'text.date.updated.at'|trans }}</th>
    <th>{{ 'text.action'|trans }}</th>
</tr>
{% endmacro %}

