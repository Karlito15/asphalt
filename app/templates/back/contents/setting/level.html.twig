{% block table %}

    <tbody>
    {% for item in entities %}
        <tr>
            <td class="{{ classes.td }}">{{ component('ValueInteger', {value: item.id}) }}</td>
            <td class="{{ classes.td }}">{{ component('ValueInteger', {value: item.level}) }}</td>
            <td class="{{ classes.td }}">{{ component('ValueInteger', {value: item.common}) }}</td>
            <td class="{{ classes.td }}">{{ component('ValueInteger', {value: item.rare}) }}</td>
            <td class="{{ classes.td }}">{{ component('ValueInteger', {value: item.epic}) }}</td>
            <td class="{{ classes.td }}">{{ item.slug }}</td>
            {{ component('TableDate', {entity: item}) }}
            {{ component('TableAction', {id: item.id, link: 'admin.setting.level.update'}) }}
        </tr>
    {% else %}
        {{ component('TableEmpty', {value: 9}) }}
    {% endfor %}
    </tbody>
    <thead>
        {{ _self.legend() }}
    </thead>
    <tfoot>
        {{ _self.legend() }}
    </tfoot>
{% endblock %}

{% macro legend() %}
<tr>
    <th>{{ 'text.id'|trans }}</th>
    <th>{{ 'text.level'|trans }}</th>
    <th>{{ 'text.common'|trans }}</th>
    <th>{{ 'text.rare'|trans }}</th>
    <th>{{ 'text.epic'|trans }}</th>
    <th>{{ 'text.slug'|trans }}</th>
    <th>{{ 'text.date.created.at'|trans }}</th>
    <th>{{ 'text.date.updated.at'|trans }}</th>
    <th>{{ 'text.action'|trans }}</th>
</tr>
{% endmacro %}

