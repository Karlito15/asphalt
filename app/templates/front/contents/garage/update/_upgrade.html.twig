
{#<section class="{{ container|default('container') }} mb-2 px-0">#}
<div class="col">
    <h2 class="text-center">{{ 'text.upgrade'|trans|plural }}</h2>
    <table class="table table-striped table-bordered mb-0">
        <thead>
            <tr>
                <th class="text-center">{{ form_label(form.upgrade.0.speed, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                <th class="text-center">{{ form_label(form.upgrade.0.acceleration, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                <th class="text-center">{{ form_label(form.upgrade.0.handling, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                <th class="text-center">{{ form_label(form.upgrade.0.nitro, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                <th class="text-center">{{ form_label(form.upgrade.0.common, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                <th class="text-center">{{ form_label(form.upgrade.0.rare, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                <th class="text-center">{{ form_label(form.upgrade.0.epic, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ form_widget(form.upgrade.0.speed, {attr: {'max': entity.settingLevel.level}}) }}</td>
                <td>{{ form_widget(form.upgrade.0.acceleration, {attr: {'max': entity.settingLevel.level}}) }}</td>
                <td>{{ form_widget(form.upgrade.0.handling, {attr: {'max': entity.settingLevel.level}}) }}</td>
                <td>{{ form_widget(form.upgrade.0.nitro, {attr: {'max': entity.settingLevel.level}}) }}</td>
                <td>{{ form_widget(form.upgrade.0.common, {attr: {'max': entity.settingLevel.common}}) }}</td>
                <td>{{ form_widget(form.upgrade.0.rare, {attr: {'max': entity.settingLevel.rare}}) }}</td>
                <td>{{ form_widget(form.upgrade.0.epic, {attr: {'max': entity.settingLevel.epic}}) }}</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>{{ _self.diff(entity.level, form.upgrade.0.speed.vars.value) }}</td>
                <td>{{ _self.diff(entity.level, form.upgrade.0.acceleration.vars.value) }}</td>
                <td>{{ _self.diff(entity.level, form.upgrade.0.handling.vars.value) }}</td>
                <td>{{ _self.diff(entity.level, form.upgrade.0.nitro.vars.value) }}</td>
                <td>{{ _self.diff(entity.settingLevel.common, form.upgrade.0.common.vars.value) }}</td>
                <td>{{ _self.diff(entity.settingLevel.rare, form.upgrade.0.rare.vars.value) }}</td>
                <td>{{ _self.diff(entity.settingLevel.epic, form.upgrade.0.epic.vars.value) }}</td>
            </tr>
        </tfoot>
    </table>
</div>
{#</section>#}


{% macro diff(levelMax, levelActual) %}
    {% set result = (levelMax - levelActual) %}
    <label for="">
        {% if result != 0 %}
            <input type="text" class="form-control form-control-sm text-center text-info fw-bolder" value="{{- result -}}">
        {% else %}
            <input type="text" class="form-control-plaintext form-control-sm text-center text-info fw-bolder" value="" disabled="disabled">
        {% endif %}
    </label>
{% endmacro %}
