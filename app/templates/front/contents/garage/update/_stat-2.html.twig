
<div class="card">
    <div class="card-header bg-dark-subtle py-1">
        <h2 class="h6 text-center m-0">{{ 'text.stat'|trans|plural }}</h2>
    </div>
    <div class="card-body p-2">
        <table class="table table-striped table-bordered mb-0">
            <thead>
                <tr>
                    <th class="text-center">{{ form_label(form.statMin.0.speed, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                    <th class="text-center">{{ form_label(form.statMin.0.acceleration, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                    <th class="text-center">{{ form_label(form.statMin.0.handling, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                    <th class="text-center">{{ form_label(form.statMin.0.nitro, '', {'label_attr': {'class': 'fw-light m-0 p-0'}}) }}</th>
                    <th class="text-end"><label class="fw-light m-0 p-0 form-label" for="{{ 'text.average'|trans }}">{{ 'text.average'|trans }}</label></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="p-0">{{ form_widget(form.statMin.0.speed) }}</td>
                    <td class="p-0">{{ form_widget(form.statMin.0.acceleration) }}</td>
                    <td class="p-0">{{ form_widget(form.statMin.0.handling) }}</td>
                    <td class="p-0">{{ form_widget(form.statMin.0.nitro) }}</td>
                    <td class="p-0 pe-2">
                        <input type="text" class="text-end fw-bolder m-0 p-0 form-control-plaintext form-control-sm form-control" value="{{ entity.statMin.0.average|number_format('2', ',', ' ') }}">
                    </td>
                </tr>
                <tr>
                    <td class="p-0">{{ form_widget(form.statMax.0.speed) }}</td>
                    <td class="p-0">{{ form_widget(form.statMax.0.acceleration) }}</td>
                    <td class="p-0">{{ form_widget(form.statMax.0.handling) }}</td>
                    <td class="p-0">{{ form_widget(form.statMax.0.nitro) }}</td>
                    <td class="p-0 pe-2">
                        <input type="text" class="text-end fw-bolder m-0 p-0 form-control-plaintext form-control-sm form-control" value="{{ entity.statMax.0.average|number_format('2', ',', ' ') }}">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
