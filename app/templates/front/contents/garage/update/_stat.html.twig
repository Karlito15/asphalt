{#            </tr>#}
            <tr>
{#                <td>Max</td>#}
                <td>{{ form_widget(form.statMax.0.speed) }}</td>
                <td>{{ form_widget(form.statMax.0.acceleration) }}</td>
                <td>{{ form_widget(form.statMax.0.handling) }}</td>
                <td>{{ form_widget(form.statMax.0.nitro) }}</td>
                <td>
                    <input type="text" class="text-end fw-bolder m-0 p-0 form-control-plaintext form-control-sm form-control" value="{{ entity.statMax.0.average|number_format('2', ',', ' ') }}">
                </td>
            </tr>
        </tbody>
    </table>
</div>
