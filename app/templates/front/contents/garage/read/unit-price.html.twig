            <td class="small">{{ _self.price(0, entity.unitPrice_common) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_rare) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_epic) }}</td>
        </tr>
    </tbody>
</table>

{% macro price(level, price) %}
    {{ (price * level)|number_format }}
{% endmacro %}
