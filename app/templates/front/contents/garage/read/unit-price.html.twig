<div class="card-title">
    <h4 class="text-center">{{ 'text.unit-price'|trans|plural() }}</h4>
</div>
<table class="{{ classes.table }}">
    <thead>
        <tr>
            <th>{{ 'text.level01'|trans }}</th>
            <th>{{ 'text.level02'|trans }}</th>
