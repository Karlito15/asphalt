            <td class="small">{{ _self.price(4, entity.unitPrice_level04) }}</td>
            <td class="small">{{ _self.price(4, entity.unitPrice_level05) }}</td>
            <td class="small">{{ _self.price(4, entity.unitPrice_level06) }}</td>
            <td class="small">{{ _self.price(4, entity.unitPrice_level07) }}</td>
            <td class="small">{{ _self.price(4, entity.unitPrice_level08) }}</td>
