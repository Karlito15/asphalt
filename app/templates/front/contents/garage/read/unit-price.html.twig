            <td class="small">{{ _self.price(0, entity.unitPrice_level05) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_level06) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_level07) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_level08) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_level09) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_level10) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_level11) }}</td>
            <td class="small">{{ _self.price(0, entity.unitPrice_level12) }}</td>
