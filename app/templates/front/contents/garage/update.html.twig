{% block content %}

{% set background, text = '', '' %}

{% if entity.status.current.unblock == false %}
    {% set background = 'bg-danger-subtle' %}
    {% set text       = 'text-danger' %}
{% endif %}

{% if entity.status.current.unblock == true %}
    {% set background = 'bg-success-subtle' %}
    {% set text       = 'text-success' %}
{% endif %}

{% if entity.status.current.unblock == true and entity.status.current.gold == true %}
    {% set background = 'bg-warning-subtle' %}
    {% set text       = 'text-warning' %}
{% endif %}

<div class="card {{ background }}">
    <div class="card-header {{ background }}">
        {% include "@App/front/contents/garage/common/_title.html.twig" %}
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {% include "@App/front/contents/garage/update/_garage-part-1.html.twig" %}
            <div class="row rows-2">
                {% include "@App/front/contents/garage/update/_upgrade.html.twig" %}
                {% include "@App/front/contents/garage/update/_rank.html.twig" %}
            </div>
            <div class="row rows-2">
                {% include "@App/front/contents/garage/update/_blueprint.html.twig" %}
                {% include "@App/front/contents/garage/update/_stat.html.twig" %}
            </div>
{#            {% include "@App/front/contents/garage/update/_tag.html.twig" %}#}
            {% include "@App/front/contents/garage/update/_status.html.twig" %}
            {{ form_rest(form) }}
        {% include "@App/front/contents/garage/update/_button.html.twig" %}
        {{ form_end(form) }}
    </div>
    <div class="card-footer">
        {{ include('@App/front/contents/garage/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

{% extends '@App/front/bases/full.html.twig' %}
