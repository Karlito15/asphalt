
<!-- Header -->
<header>
    <div class="px-3 py-2 text-bg-dark border-bottom">
        <div class="{{ container|default('container') }}">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="{{ path('app.dashboard.index') }}" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                    <img src="{{ asset(images.logo) }}" alt="{{ metas.title }}" style="max-height: 50px;" />
                </a>
                <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                    {{ component('NavFrontHeader', {icon: 'fa-house', link: 'app.dashboard.index', text: 'text.dashboard'|trans}) }}
                    {{ component('NavFrontHeader', {icon: 'fa-automobile', link: 'app.garage.index', text: 'text.garage'|trans}) }}
                    {{ component('NavFrontHeader', {icon: 'fa-flag-checkered', link: 'app.race.index', text: 'text.race'|trans}) }}
