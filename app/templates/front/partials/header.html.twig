                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-regular fa-file d-block mx-auto mb-1" aria-hidden="true"></i>
                            {{ 'text.page'|trans|plural }}
						</a>
						<ul class="dropdown-menu">
							<li><hr class="dropdown-divider"></li>
                            <li class="bg-primary-subtle px-3">{{ 'text.filter'|trans }}</li>
							<li><a class="dropdown-item" href="{{ path('app.page.filter.gold', {'letter': 'S'}) }}">{{ 'text.gold'|trans }}</a></li>
