<!DOCTYPE html>
<html lang="{{ app.request.locale|default('en') }}" data-bs-theme="dark">
<head>
    {% block metas %}{% include '@App/share/meta.html.twig' %}{% endblock %}

    <title>{% block title %}{{ controller_name|default('Page Title') }}{% endblock %} - {{ metas.title }}</title>

    {% block favicons %}{% include '@App/share/favicon.html.twig' %}{% endblock %}

    {% block stylesheets %}
    <!-- Stylesheets -->
    <link href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
{#        <link href="{{ asset('styles/bootstrap/5.3.8/bootstrap.scss') }}" rel="stylesheet" type="text/css" />#}
    {% endblock %}
</head>

<body{% block body %}{% endblock %}>

    {% block notification %}
    {#    {% include '@App/share/alert.html.twig' %}#}
        {% include '@App/share/sweet-alert.html.twig' %}
    {% endblock %}

    {% block main %}{% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}

        <!-- Scripts -->
        <script src="{{ asset('libraries/jquery/3.7.1.min.js') }}"></script>
        {# pour le dropdwon dans le header #}
        <script src="{{ asset('libraries/bootstrap/5.3.8/js/bootstrap.bundle.js') }}"></script>
        <!-- flash messages -->
        {% include "@App/share/_script-sweet-alert.html.twig" %}
        <script src="{{ asset('libraries/dashboard-flash-message.js') }}"></script>
        {# back to top #}
        <script src="{{ asset('libraries/scroll-to-top-button/jquery-backToTop.js') }}"></script>
        {% include "@App/share/_script-back-to-top.html.twig" %}
    {% endblock %}

</body>
</html>
