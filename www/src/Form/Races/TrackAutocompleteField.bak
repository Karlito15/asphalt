<?php

namespace App\Form\Race;

use App\Entity\RaceTrack;
use App\Repository\RaceTrackRepository;
use Symfony\Component\Form\AbstractType;
use Symfony\Component\OptionsResolver\OptionsResolver;
use Symfony\UX\Autocomplete\Form\AsEntityAutocompleteField;
use Symfony\UX\Autocomplete\Form\ParentEntityAutocompleteType;

#[AsEntityAutocompleteField]
class TrackAutocompleteField extends AbstractType
{
    public function configureOptions(OptionsResolver $resolver)
    {
        $resolver->setDefaults([
            'choice_label'      => 'nameEnglish',
            'class'             => RaceTrack::class,
            'label'             => 'Choose a RaceTrack',
            'multiple'          => false,
            'placeholder'       => 'Choose a RaceTrack',
            'query_builder'     => function(RaceTrackRepository $raceTrackRepository) {
                return $raceTrackRepository->createQueryBuilder('raceTrack');
            },
	        'required'          => false,
	        'searchable_fields' => ['nameEnglish'],
            //'security'        => 'ROLE_SOMETHING',
        ]);
    }

    public function getParent(): string
    {
        return ParentEntityAutocompleteType::class;
    }
}
