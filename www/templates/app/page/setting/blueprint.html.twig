{% extends '@App/bases/full.html.twig' %}

{% block datas %}
<table class="{{ classes.table_index }}">
    <thead>
        <tr>
        <th class="col text-center">#</th>
        <th class="col-3 text-start">Car</th>
        <th class="col text-center" colspan="3">1&nbsp;<i class="fa-solid fa-star fa-rotate-90"></i></th>
        <th class="col text-center" colspan="3">2&nbsp;<i class="fa-solid fa-star fa-rotate-90"></i></th>
        <th class="col text-center" colspan="3">3&nbsp;<i class="fa-solid fa-star fa-rotate-90"></i></th>
        <th class="col text-center" colspan="3">4&nbsp;<i class="fa-solid fa-star fa-rotate-90"></i></th>
        <th class="col text-center" colspan="3">5&nbsp;<i class="fa-solid fa-star fa-rotate-90"></i></th>
        <th class="col text-center" colspan="3">6&nbsp;<i class="fa-solid fa-star fa-rotate-90"></i></th>
        <th class="col text-center" colspan="3">Total</th>
        <th class="col text-center">Action</th>
    </tr>
    </thead>
    <tbody>
    {% for item in results %}
    {% set Total2 = (item.sbp2|default(0) - item.star2|default(0)) %}
    {% set Total3 = (item.sbp3|default(0) - item.star3|default(0)) %}
    {% set Total4 = (item.sbp4|default(0) - item.star4|default(0)) %}
    {% set Total5 = (item.sbp5|default(0) - item.star5|default(0)) %}
    {% set Total6 = (item.sbp6|default(0) - item.star6|default(0)) %}
    {% set Total = (item.sbptotal|default(0) - item.total|default(0)) %}
        <tr>
        <td class="col text-center">{{ loop.index }}</td>
        <td class="col-3 text-start"><a href="{{ path('app.garage.update', {'id': item.id, 'slug': item.slug}) }}" target="_blank">{{ item.brand }} {{ item.model }}</a></td>
        <td class="text-center">{{ item.star1 }}</td>
        <td class="text-center">{{ item.sbp1 }}</td>
        <td class="text-center">{{ item.star1 }}</td>
        <td class="text-center">{{ item.star2 }}</td>
        <td class="text-center">{{ item.sbp2 }}</td>
        <td class="text-center">{{ Total2 }}</td>
        <td class="text-center">{{ item.star3 }}</td>
        <td class="text-center">{{ item.sbp3 }}</td>
        <td class="text-center">{{ Total3 }}</td>
        <td class="text-center">{{ item.star4 }}</td>
        <td class="text-center">{{ item.sbp4 }}</td>
        <td class="text-center">{{ Total4 }}</td>
        <td class="text-center">{{ item.star5 }}</td>
        <td class="text-center">{{ item.sbp5 }}</td>
        <td class="text-center">{{ Total5 }}</td>
        <td class="text-center">{{ item.star6 }}</td>
        <td class="text-center">{{ item.sbp6 }}</td>
        <td class="text-center">{{ Total6 }}</td>
        <td class="col text-center">{{ item.sbptotal }}</td>
        <td class="col text-center">{{ item.total }}</td>
        <td class="col text-center">{{ Total }}</td>
        <td class="col text-end">{{ component('ButtonEdit', { path: 'app.garage.update', id: item.id, slug: item.slug, target: true }) }}</td>
    </tr>
    {% else %}
        {{ component('TableNoRecords', { value: 25 }) }}
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/override-table.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
