<!-- component html -->
<div class="row"{{ attributes }}>
    <div class="w-25">&nbsp;</div>
    <div class="w-25 px-5">
        <form method="post" action="{{ path(link, {'id': id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
            <button class="btn btn-outline-danger text-uppercase w-100">Delete</button>
        </form>
    </div>
    <div class="w-50">&nbsp;</div>
</div>
