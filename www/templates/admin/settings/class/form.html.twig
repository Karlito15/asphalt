    </div>
    <div class="row">
        <div class="col">{{ form_rest(form) }}</div>
    </div>

    {{ component('FormSaveDatas', {link: index}) }}
{{ form_end(form) }}

{% if items.3 == 'update' %}
    {{ component('FormDeleteDatas', {link: 'admin.setting.class.delete', id: setting_class.id}) }}
{% endif %}

{% endblock %}
