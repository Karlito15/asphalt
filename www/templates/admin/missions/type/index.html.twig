{% extends '@App/bases/full.html.twig' %}

{% block datas %}
    <table class="{{ classes.table_index }}">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.value }}</td>
                <td>{{ type.slug }}</td>
                <td class="text-end">{{ component('ButtonEdit', {id: type.id, slug: null, path: 'admin.mission.type.update', target: false}) }}</td>
            </tr>
        {% else %}
            	{{ component('TableNoRecords', {value: 4}) }}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
