{% extends '@App/bases/full.html.twig' %}

{% block datas %}
{{ form_start(form) }}
    <div class="row bg-secondary">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">{{ form_row(form.category) }}</div>
        <div class="col">{{ form_row(form.label) }}</div>
        <div class="col">{{ form_row(form.value) }}</div>
        <div class="col">{{ form_row(form.filter) }}</div>
        <div class="col">{{ form_row(form.position) }}</div>
        <div class="col">
            <div class="mb-3">
                {{ form_label(form.active) }}
                {{ form_widget(form.active) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">{{ form_rest(form) }}</div>
    </div>

    {{ component('FormSaveDatas', {link: index}) }}
{{ form_end(form) }}

{% if items.2 == 'update' %}
