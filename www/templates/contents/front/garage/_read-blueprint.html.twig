
<div class="card-body">
    <div class="card-title"><h4 class="text-dark text-center h6">{{ 'app.garage.blueprint'|trans }}</h4></div>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center py-1">{{ 'table.star1'|trans }}</th>
                <th class="text-center py-1">{{ 'table.star2'|trans }}</th>
                <th class="text-center py-1">{{ 'table.star3'|trans }}</th>
                <th class="text-center py-1">{{ 'table.star4'|trans }}</th>
                <th class="text-center py-1">{{ 'table.star5'|trans }}</th>
                <th class="text-center py-1">{{ 'table.star6'|trans }}</th>
                <th class="text-center py-1">{{ 'table.total'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {% set star1 = entity.garage_star1 ~ '/' ~ entity.blueprint_star1 %}
                    {{ component('FormGarageRead', {name: 'table.star1', value: star1 }) }}
                </td>
                <td>
                    {% set star2 = entity.garage_star2 ~ '/' ~ entity.blueprint_star2 %}
                    {{ component('FormGarageRead', {name: 'table.star2', value: star2 }) }}
