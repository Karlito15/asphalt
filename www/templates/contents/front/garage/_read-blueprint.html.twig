                <td>
                    {% set star4 = entity.garage_star4 ~ '/' ~ entity.blueprint_star4 %}
                    {{ component('FormGarageRead', {name: 'table.star4', value: star4 }) }}
                </td>
                <td>
                    {% set star5 = entity.garage_star5 ~ '/' ~ entity.blueprint_star5 %}
                    {{ component('FormGarageRead', {name: 'table.star5', value: star5 }) }}
                </td>
                <td>
                    {% set star6 = entity.garage_star6 ~ '/' ~ entity.blueprint_star6 %}
                    {{ component('FormGarageRead', {name: 'table.star6', value: star6 }) }}
                </td>
                <td>
                    {% set total = entity.garage_total ~ '/' ~ entity.blueprint_total %}
                    {{ component('FormGarageRead', {name: 'table.total', value: total }) }}
                </td>
