
<div class="card-body">
    <div class="card-title"><h4 class="text-dark text-center h6">{{ 'app.garage.upgrade'|trans }}</h4></div>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center py-1">{{ 'table.speed'|trans }}</th>
                <th class="text-center py-1">{{ 'table.acceleration'|trans }}</th>
                <th class="text-center py-1">{{ 'table.handling'|trans }}</th>
                <th class="text-center py-1">{{ 'table.nitro'|trans }}</th>
                <th class="text-center py-1">{{ 'table.common'|trans }}</th>
                <th class="text-center py-1">{{ 'table.rare'|trans }}</th>
                <th class="text-center py-1">{{ 'table.epic'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {% set speed = entity.upgrade_speed ~ '/' ~ entity.level_level %}
                    {{ component('FormGarageRead', {name: 'table.speed', value: speed }) }}
                </td>
                <td>
                    {% set acceleration = entity.upgrade_acceleration ~ '/' ~ entity.level_level %}
                    {{ component('FormGarageRead', {name: 'table.acceleration', value: acceleration }) }}
                </td>
                <td>
                    {% set handling = entity.upgrade_handling ~ '/' ~ entity.level_level %}
                    {{ component('FormGarageRead', {name: 'table.handling', value: handling }) }}
                </td>
                <td>
                    {% set nitro = entity.upgrade_nitro ~ '/' ~ entity.level_level %}
                    {{ component('FormGarageRead', {name: 'table.nitro', value: nitro }) }}
                </td>
                <td>
                    {% set common = entity.upgrade_common ~ '/' ~ entity.level_common %}
                    {{ component('FormGarageRead', {name: 'table.common', value: common }) }}
                </td>
                <td>
                    {% set rare = entity.upgrade_rare ~ '/' ~ entity.level_rare %}
                    {{ component('FormGarageRead', {name: 'table.rare', value: rare }) }}
                </td>
                <td>
                    {% set epic = entity.upgrade_epic ~ '/' ~ entity.level_epic %}
                    {{ component('FormGarageRead', {name: 'table.epic', value: epic }) }}
                </td>
{#                <td>#}
{#                    <div class="input-group flex-nowrap">#}
{#                        <input disabled type="text" class="form-control h5 text-center py-1" placeholder="" value="{{ entity.upgrade_epic }}">#}
{#                        <input disabled type="text" class="form-control h5 text-center py-1" placeholder="" value="{{ entity.settingLevel.epic }}">#}
{#                    </div>#}
{#                </td>#}
            </tr>
        </tbody>
    </table>
</div>
