{% extends 'base.html.twig' %}

{% block title %}RaceTime index{% endblock %}

{% block body %}
    <h1>RaceTime index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for race_time in race_times %}
            <tr>
                <td>{{ race_time.id }}</td>
                <td>{{ race_time.name }}</td>
                <td>{{ race_time.createdAt ? race_time.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ race_time.updatedAt ? race_time.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ race_time.deletedAt ? race_time.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_race_time_show', {'id': race_time.id}) }}">show</a>
                    <a href="{{ path('app_race_time_edit', {'id': race_time.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_race_time_new') }}">Create new</a>
{% endblock %}
