{% extends 'base.html.twig' %}

{% block title %}RaceRegion index{% endblock %}

{% block body %}
    <h1>RaceRegion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for race_region in race_regions %}
            <tr>
                <td>{{ race_region.id }}</td>
                <td>{{ race_region.name }}</td>
                <td>{{ race_region.slug }}</td>
                <td>{{ race_region.createdAt ? race_region.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ race_region.updatedAt ? race_region.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ race_region.deletedAt ? race_region.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_race_region_show', {'id': race_region.id}) }}">show</a>
                    <a href="{{ path('app_race_region_edit', {'id': race_region.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_race_region_new') }}">Create new</a>
{% endblock %}
