{% extends 'base.html.twig' %}

{% block title %}InventoryApp index{% endblock %}

{% block body %}
    <h1>InventoryApp index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory_app in inventory_apps %}
            <tr>
                <td>{{ inventory_app.id }}</td>
                <td>
                    <a href="{{ path('app_inventory_app_show', {'id': inventory_app.id}) }}">show</a>
                    <a href="{{ path('app_inventory_app_edit', {'id': inventory_app.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inventory_app_new') }}">Create new</a>
{% endblock %}
