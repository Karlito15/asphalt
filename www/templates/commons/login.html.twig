{% extends '@App/bases/empty.html.twig' %}

{% block contents %}
<!-- Begin Left Content -->
<div class="col-xl-8 col-lg-6 col-md-5 no-padding">
    <div class="elisyam-bg background-01">
        <div class="elisyam-overlay overlay-01"></div>
        <div class="authentication-col-content mx-auto">
            <h1 class="gradient-text-01">{{ metas.title }}!</h1>
            <span class="description">
                Enflammez votre esprit de compétition avec Asphalt Legends Unite et plongez dans ce monde de course automobile palpitant.
                Collaborez avec d'autres pilotes dans des courses multijoueurs en ligne exaltantes, faites des dérapages et des acrobaties,
                et foncez vers la victoire dans des voitures sublimes !
            </span>
        </div>
    </div>
</div>
<!-- End Left Content -->
<!-- Begin Right Content -->
<div class="col-xl-4 col-lg-6 col-md-7 my-auto no-padding">
    <!-- Begin Form -->
    <div class="authentication-form mx-auto">
        <div class="logo-centered">
            <a href="{{ path('app.dashboard.index') }}"><img src="{{ asset(logo) }}" alt="{{ metas.title }}"></a>
        </div>
        <h3>Sign In To {{ metas.title }}</h3>
        <form method="POST">
            {% if error %}
                <div class="alert alert-danger p-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app.security.logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="group material-input">
                <input type="text" id="EmailOrUsername" name="email" value="{{ last_username }}" autocomplete="email" required autofocus>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label for="EmailOrUsername">Email or Username</label>
            </div>
            <div class="group material-input">
                <input type="password" id="Password" name="password" autocomplete="current-password" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label for="Password">Password</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="row">
                <div class="col text-start">
                    <div class="styled-checkbox">
                        <input type="checkbox" id="remember" name="_remember_me">{#  value="remember-me" #}
                        <label for="remember">Remember me</label>
                    </div>
                </div>
                <div class="col text-end">
                    <a href="javascript:void(0);">Forgot Password ?</a>
                </div>
            </div>
            <div class="sign-btn text-center">
                <button type="submit" class="btn btn-lg btn-gradient-01">
                    Sign in
                </button>
            </div>
            <div class="register">
                Don't have an account?
                <br>
                <a href="javascript:void(0);">Create an account</a>
            </div>
        </form>
    </div>
    <!-- End Form -->
</div>
<!-- End Right Content -->
{% endblock %}
